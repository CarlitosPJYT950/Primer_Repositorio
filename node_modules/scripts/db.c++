#include <iostream>
using namespace std;

struct person {
    string name;
    int age;
};

void puntero (person *p, int edad) {p->age = edad;}
void np (person p, int edad) {p.age = edad;}

int main(){
    person persona = {"Juan", 24};
    cout << "Inicio: " << persona.name << " tiene " << persona.age << " anos." << endl;

    np (persona, 25);
    cout << "Despues de np: " << persona.name << " tiene " << persona.age << " anos." << endl;

    puntero (&persona, 25);
    cout << "Despues de puntero: " << persona.name << " tiene " << persona.age << " anos." << endl;

    return 0;
}